        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:text="TextView"
        android:visibility="gone" />

</RelativeLayout>